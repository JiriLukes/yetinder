{# templates/index.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
<h1>top 10</h1>
    <div class="row">
        <div class="col-lg-8 align-center">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>Jméno</th>
                        <th>Hodnocení</th>
                    </tr>
                </thead>
                <tbody>
                {% for d in data %}
                    <tr>
                        <td><a href="{{ path('tinder', {id: d.id}) }}">{{ d.name }}</a></td>
                        <td>{{ d.rating }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>

{% endblock %}